
<div class="container">
  <div class="row center">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header">Sign up!</h3>
          <div class="row">
            <%= form_for(@user, html: {:class => "col s12"}) do |f| %>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.text_field :name %>
                  <%= f.label :name %>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.email_field :email %>
                  <%= f.label :email %>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.submit "Submit", :class => "waves-effect waves-light btn-small"%>
                </div>
            <%end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
