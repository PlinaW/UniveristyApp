<% if @user.errors.any? %>
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card-panel red lighten-2">
          <span class="white-text">
            <strong><%= pluralize(@user.errors.count, "error") %></strong>
            prohibited your profile from being created:
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </span>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row center">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header">Sign up!</h3>
          <div class="row">
            <%= form_with(model: @user, data: {turbo: false}, :class => "col s12", local: true) do |f| %>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.text_field :name %>
                  <%= f.label :name %>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.email_field :email %>
                  <%= f.label :email %>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.submit "Submit", :class => "waves-effect waves-light btn-small"%>
                <div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
